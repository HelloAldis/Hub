---
import { blogTagRobots, getTags } from '~/utils/blog';

import Layout from '~/layouts/PageLayout.astro';
import Headline from '~/components/blog/Headline.astro';

const tags = await getTags('aldis');

const metadata = {
  title: "Aldis's Blog Tags",
  robots: {
    index: blogTagRobots?.index,
    follow: blogTagRobots?.follow,
  },
};
---

<Layout metadata={metadata}>
  <Headline>Aldis's Blog Tags</Headline>
  <div class="flex justify-center flex-wrap gap-4 pb-8">
    {
      Array.from(tags, ([slug, title]) => (
        <a
          href={`/aldis/tag/${slug}`}
          class="inline-block bg-gray-200  rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
        >
          #{title}
        </a>
      ))
    }
  </div>
</Layout>
